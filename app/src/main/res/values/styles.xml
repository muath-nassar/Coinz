<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="fontFamily">@font/swissra_normal</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="fontFamily">@font/swissra_normal</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="titleFont">
        <item name="android:lineSpacingExtra">@dimen/_5ssp</item>
        <item name="fontFamily">@font/swissra_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">@dimen/_30sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
    </style>

    <style name="subtitleFont">
        <item name="fontFamily">@font/swissra_thin</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="paddingStart">@dimen/_15sdp</item>
    </style>

    <style name="headerFont">
        <item name="fontFamily">@font/swissra_normal</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="paddingStart">@dimen/_15sdp</item>
    </style>

    <style name="cardTitleandSubtitle">
        <item name="fontFamily">@font/swissra_bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="ButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">#fff</item>
        <item name="fontFamily">@font/swissra_bold</item>
        <item name="cornerRadius">@dimen/_10sdp</item>

    </style>

    <style name="number">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="NewsTitleFont">
        <item name="fontFamily">@font/swissra_normal</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">#000</item>
    </style>
