<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layoutDirection="rtl"
    android:paddingBottom="@dimen/_1sdp">

    <TextView
        android:id="@+id/tvTableIndex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="@dimen/_7ssp" />

    <ImageView

        android:id="@+id/imgTableCu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_eth" />

    <TextView
        android:id="@+id/tvTableCuName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:fontFamily="@font/swissra_thin"
        android:paddingStart="@dimen/_2sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:text="name of Currency"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="@dimen/_7ssp"

        />

    <TextView
        android:id="@+id/tvTablePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layoutDirection="ltr"
        android:text="$1000"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="@dimen/_7ssp" />

    <TextView
        android:id="@+id/tvTableTrade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layoutDirection="ltr"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:text="%12.2"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="@dimen/_7ssp" />
</LinearLayout>