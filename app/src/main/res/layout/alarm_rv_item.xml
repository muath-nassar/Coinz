<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alarm_item"
    android:layoutDirection="rtl"
    android:padding="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginBottom="@dimen/_3sdp">
    <ImageView
        android:id="@+id/imgAlarmIconItem"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_eth"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imgAlarmIconItem"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvCurrencyNameTrigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CurrencyName"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvAlarmType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أقل من"
                android:layout_marginEnd="@dimen/_2sdp"/>
            <TextView
                android:id="@+id/tvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/number"
                android:text="$500"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>