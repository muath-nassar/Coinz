<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashScreen"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/GridLayout1"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/shape_orange"/>
        <LinearLayout
           android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/shape_purple"/>

        <LinearLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_blue" />
        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/shape_green"/>
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/titleSplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:fontFamily="@font/swissra_bold"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:lineSpacingExtra="@dimen/_10ssp"
            />
        <ImageView
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_white"
            />

    </LinearLayout>
